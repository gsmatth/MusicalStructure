<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_text_view_height</item>
        <item name="android:paddingLeft">@dimen/common_text_view_padding_left</item>
        <item name="android:textSize">@dimen/common_text_view_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/common_text_view_bottom_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/colorPrimaryMinusOne</item>
    </style>
</resources>
